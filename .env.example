# Prompt Refiner runtime mode
PROMPT_REFINER_USE_MAF=true
PROMPT_REFINER_STRICT_MAF=true
PROMPT_REFINER_PASS_THRESHOLD=0.72
PROMPT_REFINER_MAX_ITERS=3
PROMPT_REFINER_JUDGE_MODELS=gpt-4.1-mini,mistral-large,grok-2-latest
PROMPT_REFINER_JUDGE_DISAGREEMENT_THRESHOLD=2.5
# Optional: set > 0 to enforce growth limit (e.g. 0.15), leave empty for no limit.
PROMPT_REFINER_REFINE_MAX_GROWTH=
PROMPT_REFINER_REFINE_MAX_ACTIONS=3

# Azure OpenAI Endpoint / Credential (필수)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
OPENAI_API_VERSION=2024-10-21
AZURE_OPENAI_MODEL=gpt-4.1-mini

# Legacy fallback (optional)
# MAF_ENDPOINT=https://your-maf-endpoint.example.com
# MAF_API_KEY=your-api-key

# Optional model/runtime settings
# PROMPT_REFINER_TEMPERATURE=
# AZURE_OPENAI_SSL_VERIFY=true
# AZURE_OPENAI_CA_BUNDLE=/path/to/ca-bundle.pem
# MAF_MODEL=gpt-4.1-mini
# MAF_API_VERSION=

# MCP server (optional; useful for remote HTTP mode)
# PROMPT_REFINER_MCP_TRANSPORT=streamable-http
# PROMPT_REFINER_MCP_HOST=0.0.0.0
# PROMPT_REFINER_MCP_PORT=8080
# PROMPT_REFINER_MCP_STREAMABLE_HTTP_PATH=/mcp
# PROMPT_REFINER_MCP_STATELESS_HTTP=true
